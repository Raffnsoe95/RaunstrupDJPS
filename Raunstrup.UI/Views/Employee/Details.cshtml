@model Raunstrup.UI.Models.EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>EmployeeViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">

            Navn
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">

            Telefon
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">

            Titel
        </dt>
        <dd class="col-sm-10">

        </dd>
        <dt class="col-sm-2">

            Speciale
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in @Model.Specialties)
            {
                @item.Title

            }
        </dd>

        <dt class="col-sm-2">
            Tilsynsførende?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Manager.Name)
        </dd>
        <dt class="col-sm-2">
            Afdeling
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-2">
            Projekter
        </dt>
        <dt class="col-sm-2">
            @*@Html.DisplayNameFor(model => model.EmployeesProjectList)*@
        </dt>
        <dd class="col-sm-10">
            @*//bruges i specialities*@
            @foreach (var item in @Model.Projects)
            {
                @item.Description

            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Ret</a> |
    <a asp-action="Index">Gå til Medarbejderliste</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Startdato
            </th>
            <th>
                Slutdato
            </th>
            <th>
                Pris
            </th>
            <th>
                Forventet kørsel
            </th>
            <th>
                Beskrivelse
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>*@

           
            @*<th>
                    @Html.DisplayNameFor(model => model.Rowversion)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Projects)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ESTdriving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>*@
                
                @*<td>
                        @Html.DisplayFor(modelItem => item.Rowversion)
                    </td>*@
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <span>|</span>
                    }
                    <a asp-action="Details" asp-controller="Project" asp-route-id="@item.Id">Details</a>
                    @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                    {
                        <span>|</span>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
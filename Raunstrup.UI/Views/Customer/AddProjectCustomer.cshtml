@model IEnumerable<Raunstrup.UI.Models.CustomerViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Tilknyt kunde</h1>
<form asp-controller="Customer" asp-action="AddProjectCustomer">
    <p>
        Søg på kundenavn: <input type="text" name="SearchString">
        <input type="submit" value="Søg" />
    </p>
    </form>
    @*<p>
        <a asp-action="Create">Create New</a>
    </p>*@
    <table class="table">
        <thead>
            <tr>
                <th>
                   Navn
                </th>
                <th>
                   Adresse
                </th>
                <th>
                    Telefonnummer
                </th>
                <th>
                   Email
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>*@
                    <td>
                        <a asp-action="AddProjectCustomerToProject" asp-route-id="@item.Id" asp-route-projectid="@ViewContext.ModelState["id"].AttemptedValue" asp-controller="Customer">Tilknyt</a> |

                    </td>
                </tr>
            }
        </tbody>
    </table>

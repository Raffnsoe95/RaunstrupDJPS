@model Raunstrup.UI.Models.ProjectDetailsViewModel

@{
    ViewData["Title"] = "Projekt";
}
//@Html.ActionLink("Convert View To PDF", "PrintViewToPdf")

<h1>Projekt</h1>

<section>
    <h4>ProjectViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Projektstart
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            Projectslutning
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            Pris
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Allokeret pris
        </dt>
        <dd class="col-sm-10">
            @Model.EstimatedPrice
        </dd>
        <dt class="col-sm-2">
            Kunderabat
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerDiscount
        </dd>
        <dt class="col-sm-2">
            Allokeret pris inkl. rabat
        </dt>
        <dd class="col-sm-10">
            @Model.DiscountedPrice
        </dd>
        <dt class="col-sm-2">
            Total forbrug
        </dt>
        <dd class="col-sm-10">
            @(Model.TotalUsedDriving + Model.TotalUsedHours + Model.TotalUsedItems)
        </dd>
        <dt class="col-sm-2">
            Estimeret kørsel
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ESTdriving)
        </dd>
        <dt class="col-sm-2">
            Beskrivelse
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Fast pris
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsFixedPrice)
        </dd>
        <dt class="col-sm-2">
            Kundeaccept
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAccepted)
        </dd>
        <dt class="col-sm-2">
            Færdigt
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDone)
        </dd>

        <dt class="col-sm-2">
            Kunde:
        </dt>
        <dd class="col-sm-10">
            @(Model.Customer?.Name)
        </dd>
    </dl>


</section>
<section>


    <a asp-action="Create" asp-route-id="@Model.Id" asp-controller="ProjectDriving">Indberet kørsel</a> |
    <a asp-action="AddUsedProjectItem" asp-route-id="@Model.Id" asp-controller="Item">Indberet materialer</a> |
    <a asp-action="Create" asp-route-id="@Model.Id" asp-controller="WorkingHours">Indberet arbejdstimer</a> |
    @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
    {
        <a asp-action="AddProjectEmployee" asp-route-id="@Model.Id" asp-controller="Employee">Tilknyt medarbejder</a> <span>|</span>
        <a asp-action="AddProjectCustomer" asp-route-id="@Model.Id" asp-controller="Customer">Tilknyt Kunde</a> <span>|</span>
        <a asp-action="AddAssignedProjectItem" asp-route-id="@Model.Id" asp-controller="Item">Tilknyt materialer</a> <span>|</span>

        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> <span>|</span>
        <a asp-action="ProjctToPdf" asp-route-id="@Model.Id" asp-controller="Project">Udskriv PDF</a>

    }

    <a asp-action="Index">Tilbage</a>
    <br />
    <br />
</section>
<section class="tabs">
    <input type="radio" name="tabs" id="tabone" checked="checked">
    <label for="tabone">Materialer</label>
    <content class="tab">
        <h5>Materialer Allokeret</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Vare
                    </th>
                    <th>
                        Antal
                    </th>
                    <th>
                        Pris
                    </th>
                    <th>
                        Total
                    </th>
                    <th>
                        Rabat
                    </th>
                    <th>
                        Total m. rabat
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.AssignedItems)
                {
                    <tr>
                        <td>
                            @item.Item.Name
                        </td>
                        <td>
                            @item.Amount
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @(item.Amount * item.Price)
                        </td>
                        <td>
                            @item.Discount
                        </td>
                        <td>
                            @item.TotalPriceWithDiscount
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="5">
                        <b>Total:</b>
                    <td>
                        @Model.TotalAssignedItems
                    </td>
                </tr>
            </tbody>
        </table>

        <h5>Materialer Brugt</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Vare
                    </th>
                    <th>
                        Antal
                    </th>
                    <th>
                        Pris
                    </th>
                    <th>
                        Total
                    </th>
                    <th>
                        Rabat
                    </th>
                    <th>
                        Total m. rabat
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.UsedItems)
                {
                    <tr>
                        <td>
                            @item.Item.Name
                        </td>
                        <td>
                            @item.Amount
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            @(item.Amount * item.Price)
                        </td>
                        <td>
                            @item.Discount
                        </td>
                        <td>
                            @item.TotalPriceWithDiscount
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="5">
                        <b>Total:</b>
                    <td>
                        @Model.TotalUsedItems
                    </td>
                </tr>
            </tbody>
        </table>
    </content>

    <input type="radio" name="tabs" id="tabtwo">
    <label for="tabtwo">Timer</label>
    <content class="tab">

        <h5>Arbejdstimer forventet</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Medarbejder
                    </th>
                    <th>
                        Timer
                    </th>
                    <th>
                        Timepris
                    </th>
                    <th>
                        Total
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProjectEmployees)
                {
                    <tr>
                        <td>
                            @item.Employee.Name
                        </td>
                        <td>
                            @item.EstWorkingHours
                        </td>
                        <td>
                            @(item.Employee.Type.HourlyPrice + item.Employee.Specialty.Bonus)
                        </td>
                        <td>
                            @((item.Employee.Type.HourlyPrice + item.Employee.Specialty.Bonus) * item.EstWorkingHours)
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="3">
                        <b>Total:</b>
                    <td>
                        @Model.TotalAssignedHours
                    </td>
                </tr>
            </tbody>
        </table>
        <h5>Arbejdstimer brugt</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Medarbejder
                    </th>
                    <th>
                        Timer arbejdet
                    </th>
                    <th>
                        Timepris
                    </th>
                    <th>
                        Total
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.WorkingHours)
                {
                    <tr>
                        <td>
                            @item.Employee.Name
                        </td>
                        <td>
                            @item.Amount
                        </td>
                        <td>
                            @item.HourlyPrice
                        </td>
                        <td>
                            @(item.Amount * item.HourlyPrice)
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="3">
                        <b>Total:</b>
                    <td>
                        @Model.TotalUsedHours
                    </td>
                </tr>
            </tbody>
        </table>
    </content>

    <input type="radio" name="tabs" id="tabthree">
    <label for="tabthree">Kørsel</label>
    <content class="tab">
        <h5>Afregning for Kørsel</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Antal
                    </th>
                    <th>
                        Stk. pris
                    </th>
                    <th>
                        Total
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProjectDrivings)
                {
                    <tr>
                        <td>
                            @item.Amount
                        </td>
                        <td>
                            @item.UnitPrice
                        </td>
                        <td>
                            @(item.Amount * item.UnitPrice)
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="2">
                        <b>Total:</b>
                    <td>
                        @Model.TotalUsedDriving
                    </td>
                </tr>
            </tbody>
        </table>
    </content>
</section>

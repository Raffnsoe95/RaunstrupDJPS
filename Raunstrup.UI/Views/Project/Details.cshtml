@model Raunstrup.UI.Models.ProjectDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ProjectViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ESTdriving)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ESTdriving)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Active)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Active)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsFixedPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsFixedPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsAccepted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsAccepted)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectEmployees)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in @Model.ProjectEmployees)
            {
                @item.Employee.Name

            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class="col-sm-10">


            @(Model.Customer?.Name)

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rowversion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rowversion)
        </dd>
    </dl>

    <h5>Afregning for Kørsel</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Antal
                </th>
                <th>
                    Stk. pris
                </th>
                <th>
                    Total
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProjectDrivings)
            {
                <tr>
                    <td>
                        @item.Amount
                    </td>
                    <td>
                        @item.UnitPrice
                    </td>
                    <td>
                        @(item.Amount * item.UnitPrice)
                    </td>
                </tr>
            }
            <tr>
                <td colspan="2">
                    <b>Total:</b>
                <td>
                    @Model.ProjectDrivings.Sum(WH => WH.Amount * WH.UnitPrice)
                </td>
            </tr>
        </tbody>
    </table>
    <h5>Arbejdstimer brugt</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Medarbejder
                </th>
                <th>
                    Timer arbejdet
                </th>
                <th>
                    Timepris
                </th>
                <th>
                    Total
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.WorkingHours)
            {
                <tr>
                    <td>
                        @item.Employee.Name
                    </td>
                    <td>
                        @item.Amount
                    </td>
                    <td>
                        @item.HourlyPrice
                    </td>
                    <td>
                        @(item.Amount * item.HourlyPrice)
                    </td>
                </tr>
            }
            <tr>
                <td colspan="3">
                    <b>Total:</b>
                <td>
                    @Model.WorkingHours.Sum(WH => WH.Amount * WH.HourlyPrice)
                </td>
            </tr>
        </tbody>
    </table>

    <h5>Materialer Allokeret</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Vare
                </th>
                <th>
                    Antal
                </th>
                <th>
                    Pris
                </th>
                <th>
                    Total
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AssignedItems)
            {
                <tr>
                    <td>
                        @item.Item.Name
                    </td>
                    <td>
                        @item.Amount
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @(item.Amount * item.Price)
                    </td>
                </tr>
            }
            <tr>
                <td colspan="3">
                    <b>Total:</b>
                <td>
                    @Model.AssignedItems.Sum(UI => UI.Amount * UI.Price)
                </td>
            </tr>
        </tbody>
    </table>

    <h5>Materialer Brugt</h5>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Vare
                </th>
                <th>
                    Antal
                </th>
                <th>
                    Pris
                </th>
                <th>
                    Total
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UsedItems)
            {
                <tr>
                    <td>
                        @item.Item.Name
                    </td>
                    <td>
                        @item.Amount
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @(item.Amount * item.Price)
                    </td>
                </tr>
            }
            <tr>
                <td colspan="3">
                    <b>Total:</b>
                <td>
                    @Model.UsedItems.Sum(UI => UI.Amount * UI.Price)
                </td>
            </tr>
        </tbody>
    </table>
</div>
<div>

    <a asp-action="Create" asp-route-id="@Model.Id" asp-controller="ProjectDriving">Indberet kørsel</a> |
    <a asp-action="AddProjectEmployee" asp-route-id="@Model.Id" asp-controller="Employee">Tilknyt medarbejder</a> |
    <a asp-action="AddProjectCustomer" asp-route-id="@Model.Id" asp-controller="Customer">Tilknyt Kunde</a> |
    <a asp-action="AddAssignedProjectItem" asp-route-id="@Model.Id" asp-controller="Item">TilFøj Item</a> |
    <a asp-action="AddUsedProjectItem" asp-route-id="@Model.Id" asp-controller="Item">Indberet Item</a> |
    <a asp-action="Create" asp-route-id="@Model.Id" asp-controller="WorkingHours">Indberet WorkingHours</a> |

    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@model IEnumerable<Raunstrup.UI.Models.ProjectViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ESTdriving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Active)
        </th>*@

            @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
            {
                <th>
                    @Html.DisplayNameFor(model => model.IsFixedPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsAccepted)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDone)
                </th>
            }
            @*<th>
            @Html.DisplayNameFor(model => model.Rowversion)
        </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ESTdriving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>*@
            @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.IsFixedPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsAccepted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDone)
                </td>
            }
            @*<td>
            @Html.DisplayFor(modelItem => item.Rowversion)
        </td>*@
            <td>
                @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <span>|</span>
                }
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                @if (User.IsInRole("Admin") || User.IsInRole("SuperUser"))
                {
                    <span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
